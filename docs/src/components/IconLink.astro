---
interface Props {
  href: string
  icon: string
  title: string
  flat?: boolean
}

const { href, icon, title, flat = false } = Astro.props
---

<a href={href} class={`icon-link-card ${flat ? 'flat' : 'enhanced'}`}>
  <div class="icon">
    <span class={icon}></span>
  </div>
  <span>{title}</span>
</a>

<style>
  .icon-link-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: 0.5rem;
    padding: 1.5rem 1rem;
    border-radius: 0.5rem;
    color: var(--sl-color-white);
    text-decoration: none;
    font-size: var(--sl-text-sm);
    transition:
      border-color 0.2s,
      background-color 0.2s;
    background-color: transparent;
    width: 9rem; /* w-36 */
    height: 8rem; /* h-32 */
  }

  .icon-link-card.flat {
    border: 1px solid var(--sl-color-gray-5);
  }

  .icon-link-card.enhanced {
    border: 1px solid var(--sl-color-gray-5);
    outline: 1px solid color-mix(in oklab, var(--sl-color-gray-5) 50%, transparent);
    outline-offset: -1px;
    background-image: linear-gradient(to top in oklab, oklch(92.2% 0 0 / 5%) 0%, oklch(17% 0 0) 100%);
    box-shadow: 0 1px 2px 0 #0000000d;
  }

  .icon-link-card.enhanced:hover {
    box-shadow:
      inset 0 -4px 6px -1px rgba(0, 0, 0, 0.1),
      inset 0 -2px 4px -2px rgba(0, 0, 0, 0.1);
  }

  .icon-link-card:hover,
  .icon-link-card:focus {
    border-color: var(--sl-color-accent);
    background: color-mix(in srgb, var(--sl-color-accent-low) 20%, transparent);
    color: var(--sl-color-white);
  }

  .icon-link-card span {
    font-weight: 600;
    color: var(--sl-color-gray-1);
  }

  .icon-link-card:hover span,
  .icon-link-card:focus span {
    color: var(--sl-color-white);
  }

  .icon-link-card .icon {
    width: 3rem;
    height: 3rem;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .icon-link-card .icon span {
    width: 100%;
    height: 100%;
    font-size: 3rem;
  }
</style>
