---
interface Props {
  href: string
  icon: string
  title?: string
  flat?: boolean
}

const { href, icon, title, flat = false } = Astro.props
---

<a href={href} class={`icon-link-card ${flat ? 'flat' : 'enhanced'}`}>
  <div class="icon">
    <span class={icon}></span>
  </div>
  {title && <span class="title">{title}</span>}
</a>

<style>
  .icon-link-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: var(--spi-iconlink-gap, 0.5rem);
    padding: var(--spi-iconlink-pad, 1rem);
    border-radius: var(--spi-iconlink-radius, 0.5rem);
    text-decoration: none;
    font-size: var(--sl-text-sm);
    transition:
      background-color 0.2s,
      box-shadow 0.2s,
      border-color 0.2s;
    background-color: transparent;
    width: var(--spi-iconlink-width, 9rem);
    height: var(--spi-iconlink-height, 8rem);
  }

  .icon-link-card.flat {
    border: 1px solid var(--sl-color-gray-5);
  }

  .icon-link-card.flat:hover,
  .icon-link-card.flat:focus {
    border-color: var(--sl-color-accent);
    background: color-mix(in srgb, var(--sl-color-accent-low) 20%, transparent);
  }

  html[data-theme='light'] .icon-link-card.flat:hover,
  html[data-theme='light'] .icon-link-card.flat:focus {
    background: color-mix(in srgb, var(--sl-color-accent-low) 10%, transparent);
  }

  .icon-link-card.enhanced {
    border: 1px solid transparent;
    background-origin: border-box;
    background-image:
      linear-gradient(to top in oklab, oklch(92.2% 0 0 / 5%) 0%, oklch(17% 0 0) 2%),
      linear-gradient(to top, color-mix(in oklab, var(--sl-color-gray-5) 17%, transparent), var(--sl-color-gray-5));
    background-clip: padding-box, border-box;
    box-shadow: 0 1px 2px 0 #0000000d;
  }

  html[data-theme='light'] .icon-link-card.enhanced {
    border: 1px solid transparent;
    background-origin: border-box;
    background-image:
      linear-gradient(
        to top in oklab,
        color-mix(in oklab, var(--sl-color-accent-low) 5%, white) 0%,
        color-mix(in oklab, var(--sl-color-gray-6) 5%, white) 100%
      ),
      linear-gradient(to top, color-mix(in oklab, var(--sl-color-gray-6) 17%, transparent), var(--sl-color-gray-6));
    background-clip: padding-box, border-box;
    box-shadow: 0 1px 2px 0 #0000000d;
    color: var(--sl-color-gray-5);
  }

  .icon-link-card.enhanced:hover,
  .icon-link-card.enhanced:focus {
    border-color: var(--sl-color-gray-3);
    box-shadow:
      inset 0 -10px 10px -5px color-mix(in srgb, var(--sl-color-accent) 10%, transparent),
      0 -10px 10px -5px color-mix(in srgb, var(--sl-color-accent) 10%, transparent),
      inset 0 10px 10px -5px color-mix(in srgb, var(--sl-color-accent) 10%, transparent),
      0 10px 10px -5px color-mix(in srgb, var(--sl-color-accent) 10%, transparent);
  }

  html[data-theme='light'] .icon-link-card.enhanced:hover,
  html[data-theme='light'] .icon-link-card.enhanced:focus {
    background-image:
      linear-gradient(
        to top in oklab,
        color-mix(in oklab, var(--sl-color-accent-low) 10%, white) 0%,
        color-mix(in oklab, var(--sl-color-gray-6) 40%, white) 100%
      ),
      linear-gradient(to top, color-mix(in oklab, var(--sl-color-gray-6) 17%, transparent), var(--sl-color-gray-6));
    border-color: var(--sl-color-gray-4);
  }

  .icon-link-card span {
    font-weight: 600;
    color: var(--sl-color-gray-1);
  }

  html[data-theme='light'] .icon-link-card span {
    color: var(--sl-color-gray-1);
  }

  .icon-link-card:hover span,
  .icon-link-card:focus span {
    color: var(--sl-color-white);
  }

  .icon-link-card .icon {
    width: var(--spi-iconlink-icon-size, 3rem);
    height: var(--spi-iconlink-icon-size, 3rem);
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .icon-link-card .icon span {
    width: 100%;
    height: 100%;
    font-size: var(--spi-iconlink-icon-size, 3rem);
  }
</style>
